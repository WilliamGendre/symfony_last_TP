{% extends 'admin/adminBase.html.twig' %}

{% block title %}Articles{% endblock %}

{% block content %}

    <main class="adminArticles">
        <section>

            {% for message in app.flashes('gagner') %}
                <h2 class="flashSuccess">{{ message }}</h2>
            {% endfor %}

            <table width="100%" border="1">
                <thead>
                    <th>Titre</th>
                    <th>Illustration</th>
                    <th>Catégorie</th>
                    <th>date de création</th>
                    <th>Publié?</th>
                    <th>Modif?</th>
                    <th>Suppression?</th>
                </thead>
            <tbody>
                {% for article in articles %}
                        <tr>
                            <td><h2>{{ article.title }}</h2></td>
                            <td><div><img src="{{ article.image }}" alt="{{ article.title }}" id="adminImageArticles"></div></td>
                            <td>{{ article.categorie.title }}</td>
                            <td><p>{{ article.createdAt | date('d/m/Y') }}</p></td>
                            <td>
                                {% if article.isPublished == 1 %}
                                    <p>OUI</p>
                                {% else %}
                                    <p>NON</p>
                                {% endif %}
                            </td>
                            <td><a href="">Modifier</a></td>
                            <td><a href="{{ path('admin_article_delete', {id: article.id}) }}">Supprimer</a></td>
                        </tr>
                {% endfor %}
                </tbody>
            </table>
        </section>
    </main>

{% endblock %}