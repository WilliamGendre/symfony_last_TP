{% extends 'admin/adminBase.html.twig' %}

{% block title %}Nouvelle article{% endblock %}

{% block content %}

<main class="mainFormeulaireController">

    <section class="formulaireCategorie">

        <h2>Modifier catégorie</h2>

        <form method="post">

            <label for="">
                <p>Catégorie</p>
                <input type="text" name="title" value="{{ categorie.title }}">
            </label>

            <label for="">
                <p>Couleur</p>
                <input type="color" name="color" value="{{ categorie.color }}">
            </label>

            <input type="submit" name="modifier">

        </form>

    </section>

</main>

{% endblock %}