{% extends 'publicView/base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block content %}

    <main class="pageArticles">
        <section>
            {% for article in articles %}
                {% if article.isPublished %}
                    <article>
                        <h2>{{ article.title }}</h2>
                        <div class="imgArticles"><img src="{{ article.image }}" alt="{{ article.title }}"></div>
                        <p>{{ article.description }}</p>
                        <p><a href="{{ path('article_id', {id: article.id}) }}">Voir article</a></p>
                    </article>
                {% endif %}
            {% endfor %}
        </section>
    </main>

{% endblock %}